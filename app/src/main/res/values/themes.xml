<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.Psique" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_50</item>
        <item name="colorPrimaryVariant">@color/primary_70</item>
        <item name="colorOnPrimary">@color/primary_110</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_50</item>
        <item name="colorSecondaryVariant">@color/secondary_70</item>
        <item name="colorOnSecondary">@color/secondary_110</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/body_base</item>
    </style>
    <style name="Theme.Splash" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>